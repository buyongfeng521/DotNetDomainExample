
@{
    ViewBag.Title = "ModifyPSW";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Step.Domain.Entity.t_admin_userEntity

<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Admin/Home/Index">主页</a>
        </li>
        <li>
            <a href="#">用户</a>
        </li>
        <li class="active">修改密码</li>
    </ul>
</div>

<div class="page-content">
    <div class="page-header">
        <h1>
            用户
            <small>
                <i class="icon-double-angle-right"></i>
                修改密码
            </small>
        </h1>
    </div>

    <div class="row">

        <div class="col-xs-12">
            <form id="frmPsw" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">旧密码</label>
                    <div class="col-sm-9">
                        <input type="password" name="oldPassword" value="" class="col-xs-10 col-sm-5" required="required" placeholder="旧密码" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">密码</label>
                    <div class="col-sm-9">
                        <input type="password" name="password" value="" class="col-xs-10 col-sm-5" required="required" placeholder="密码" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">重复密码</label>
                    <div class="col-sm-9">
                        <input type="password" name="secondPassword" value="" class="col-xs-10 col-sm-5" required="required" placeholder="重复密码" />
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="button" class="btn btn-sm btn-info" id="btnSave">
                            <i class="icon-ok bigger-110"></i>
                            确定
                        </button>
                    </div>
                </div>
            </form>
        </div>

    </div>



</div>



<script>
    $(function () {
        $("#btnSave").click(function () {
            var url = "/Admin/Settings/ModifyPSW";
            $.post(url, $("#frmPsw").serialize(), function (data) {
                $.procAjaxData(data);
            });
        });
    });
</script>

